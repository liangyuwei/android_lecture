<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.zju.id21832004.liangyuwei.StatusActivity"
    >

    <TextView
        android:id="@+id/txtPkg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="will be set to package name on create..."
        android:textSize="20sp"
        android:background="@android:color/holo_green_light"
        android:layout_toStartOf="@+id/btnPost"
        android:layout_above="@+id/btnPost" />

    <TextView
        android:id="@+id/txtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="140"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtPkg" />

    <Button
        android:id="@+id/btnPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_post_text"
        android:textSize="24sp"
        android:layout_below="@+id/txtCount"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true" />

    <EditText
        android:id="@+id/editStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="top|left"
        android:text="@string/edit_text"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_alignTop="@+id/btnPost"
        android:layout_toStartOf="@+id/btnPost" />


</RelativeLayout>
